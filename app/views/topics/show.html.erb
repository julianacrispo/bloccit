<h1><%= @topic.name %></h1>

<% if policy(@topic).update? %>
  <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success' %>
<% end %>

<div class="row">
  <div class="col-md-8">
    <p class="lead"><%= @topic.description %></p>
  

    <%= render @posts %>
    <%= will_paginate @posts %>

    <%= link_to 'New Post', new_topic_post_path(@topic) %>

  </div>
</div>